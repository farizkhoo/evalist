<div class="row">
  <div class="col-md-4 offset-md-4 text-center">

    <h2>Sign in</h2>

    <%= form_for :session, url: session_path do |form| %>
      <div class="form-group">

        <%= form.text_field :email, type: 'email', class: "form-control", placeholder: "email" %>

      </div>

      <div class="form-group">

        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="actions">
        <%= form.submit "Sign in", class: "btn btn-primary" %> 
      </div>

      <br>

      <div class="other-links">
        <% if Clearance.configuration.allow_sign_up? %>

          
            <a class="btn btn-info"<%= link_to "/auth/linkedin" do %>
              <i class="fa fa-linkedin"></i> Login with LinkedIn  
            <% end %>
        <% end %>
        
        <br>
        <hr>
        <%= link_to "Forgot Password?", new_password_path, class:"btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>