<h1>New Account</h1>
<%= @errors %>
<%= form_for @user do |form|%>
  <div>
    First name :
    <br>
    <%= form.text_field :first_name %>
  </div>
  <br>
  <div>
    Last name :
    <br>
    <%= form.text_field :last_name %>
  </div>
  <br>
  <div>
    E-mail :
    <br>
    <%= form.text_field :email %>
  </div>
  <br>
  <div>
    Password :
    <br>
    <%= form.password_field :password %>
  </div>
  <br>
  <div>
    Password :
    <br>
    <%= form.text_field :phone_number %>
  </div>
  <br>
  <div>
    Date of birth :
    <br>
    <%= form.date_field :date_of_birth %>
  </div>
  <br>
  <div>
    Gender :
    <br>
    <%= form.radio_button :gender, 'Male' %> Male<br>
    <%= form.radio_button :gender, 'Female' %> Female<br>
    <%= form.radio_button :gender, 'Others' %> Others<br>
  </div>
  <br>
  <%= form.submit 'Create Account'%>
<% end %>