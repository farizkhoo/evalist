<div class="row">
  <div class="col-md-4 offset-md-4 text-center">

    <h2>Sign up</h2>
    <%= form_for @user do |form| %>
  
      <div class="form-group">

        <%= form.text_field :name, class: "form-control", placeholder: "name" %>
      </div>

      <div class="form-group">

        <%= form.email_field :email, class: "form-control", placeholder: "email" %>
      </div>

      <div class="form-group">

        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="form-group">
        <%= form.text_field :phone, class: "form-control", placeholder: "phone"%>
      </div>

      <div class="actions">
          <%= form.submit "Sign up", class: "btn btn-primary" %> 
      </div><br>
      <div class="other-links">
        <% if Clearance.configuration.allow_sign_up? %>

          
            <a class="btn btn-info"<%= link_to "/auth/linkedin" do %>
              <i class="fa fa-linkedin"></i> Signup with LinkedIn  
            <% end %>
        <% end %>
        <hr>

      <div class="actions">
        <%= link_to t(".sign_in"), sign_in_path, class: "btn btn-light" %>
      </div>
    <% end %>

  </div>
</div>