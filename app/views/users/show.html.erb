<h1>Your Account</h1>

 <div class="row">   
      <div class="col-md-3">

   <ul class= "sidebar-list">

            
               <%= link_to 'New Project', new_project_path, class: 'sidebar-link active' %>

               </br>
          
               <%= link_to 'Your Projects',  your_projects_path, class: 'sidebar-link active' %>   

               </br>

                <%= link_to 'View Projects', projects_path, class: 'sidebar-link active' %> 

                </br>

                 <%= link_to 'Reviews', edit_user_path(@user.id), class: 'sidebar-link active' %>
    </br>

    <%= link_to 'Edit Account', responses_path, class: 'sidebar-link active' %>
    
    </div>     
       </ul> 

    <div class="row">
     
