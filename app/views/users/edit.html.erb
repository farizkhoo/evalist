<h1>Edit account</h1>
<%= @errors %>
<%= form_for @user do |form| %>
  <div>
    Name :
    <br>
    <%= @user.name %>
  </div>
  <br>
  <div>
    Job Title :
    <br>
    <%= form.text_field :job_title %><br>
  </div>
  <br>
  <div>
    E-mail :
    <br>
    <%= @user.email %>
  </div>
  <br>
  <div>
    Phone number :
    <br>
    <%= @user.phone %>
  </div>
  <br>
  <div>
    Date of birth :
    <br>
    <%= @user.birthdate %>
  </div>
  <br>
  <div>
    Gender :
    <br>
    <%= @user.gender %><br>
  </div>
  <div>
    About :
    <br>
    <%= form.text_area :about %><br>
  </div>
  <br>
  <br>
  <%= form.submit 'Submit Changes' %>
<% end %>
